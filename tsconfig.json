{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Emit */
		"outDir": "dist",
		"declaration": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/lib"],
	"exclude": ["src/**/*.test.ts"]
}
